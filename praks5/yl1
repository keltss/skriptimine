#!/bin/bash
# küsib vanuse ja määrab eluetapi — valideerib sisendi enne võrdlusi

read -p "Sisesta oma vanus: " vanus

# kontroll: peab olema mitte-negatiivne täisarv (nt 0,1,2,...)
if ! [[ "$vanus" =~ ^[0-9]+$ ]]; then
    echo "Vigane sisend: palun sisesta mitte-negatiivne täisarv (nt 34)."
    exit 1
fi

# nüüd on $vanus puhas täisarv — kasutame aritmeetikat
if (( vanus >= 0 && vanus < 11 )); then
    echo "Oled laps"
elif (( vanus >= 11 && vanus < 18 )); then
    echo "Oled nooruk"
elif (( vanus >= 18 && vanus < 63 )); then
    echo "Oled täiskasvanu"
elif (( vanus >= 63 )); then
    echo "Oled senjoor"
else
    echo "Vigane sisend"
fi

